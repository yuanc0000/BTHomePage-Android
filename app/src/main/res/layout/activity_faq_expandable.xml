<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--    title-->

    <TextView
        android:id="@+id/staticFAQ"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="FAQ"
        android:textColor="#000000"
        android:textSize="40sp" />

    <RelativeLayout
        android:id="@+id/faq1_expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/staticFAQ"
        android:gravity="center_horizontal"
        android:layout_marginLeft="20dp">

        <!-- First FAQ section, contains a question TextView, an arrow-down ImageView,
        and an answer TextView which is initially gone (invisible) -->

        <TextView
            android:id="@+id/q1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:text="Who is this app for?"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/down1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/expand"
            android:layout_toEndOf="@+id/q1"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/f1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/q1"
            android:background="@color/white"
            android:layout_marginBottom="20dp"
            android:text="This app is for patients in recovery with breathing ailments."
            android:textColor="#5A5A5A"
            android:textSize="17dp" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/up1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/expand"
            android:layout_toEndOf="@+id/f1"
            android:layout_below="@+id/f1"
            android:layout_marginStart="5dp"
            android:layout_marginTop="-25dp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/faq2_expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/faq1_expand"
        android:layout_marginLeft="20dp"
        android:gravity="center_horizontal">

        <!-- First FAQ section, contains a question TextView, an arrow-down ImageView,
        and an answer TextView which is initially gone (invisible) -->

        <TextView
            android:id="@+id/q2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:text="What is this app for?"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/down2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/expand"
            android:layout_toEndOf="@+id/q2"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/f2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/q2"
            android:background="@color/white"
            android:layout_marginBottom="20dp"
            android:text="The app is for patients breathing rehabilitation. It will provide you with a step by step tutorial of how to properly complete your daily breathing. Additioanlly, it will have information on all of the exercises, a progress tracker, and more so that you have all the tools and resources to succeed on your journey of health."
            android:textColor="#5A5A5A"
            android:textSize="17dp"  />

        <ImageView
            android:visibility="gone"
            android:id="@+id/up2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/expand"
            android:layout_toEndOf="@+id/f2"
            android:layout_below="@+id/f2"
            android:layout_marginStart="5dp"
            android:layout_marginTop="-25dp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/faq3_expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/faq2_expand"
        android:gravity="center_horizontal"
        android:layout_marginLeft="20dp">

        <!-- First FAQ section, contains a question TextView, an arrow-down ImageView,
        and an answer TextView which is initially gone (invisible) -->

        <TextView
            android:id="@+id/q3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:text="How frequently should the app be used?"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/down3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/expand"
            android:layout_toEndOf="@+id/q3"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/f3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/q3"
            android:background="@color/white"
            android:layout_marginBottom="20dp"
            android:text="The frequency of this app is set by your doctor and you based on your physical therapy schedule."
            android:textColor="#5A5A5A"
            android:textSize="17dp"  />

        <ImageView
            android:visibility="gone"
            android:id="@+id/up3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/expand"
            android:layout_toEndOf="@+id/f3"
            android:layout_below="@+id/f3"
            android:layout_marginStart="5dp"
            android:layout_marginTop="-25dp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/faq4_expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/faq3_expand"
        android:gravity="center_horizontal"
        android:layout_marginLeft="20dp">

        <!-- First FAQ section, contains a question TextView, an arrow-down ImageView,
        and an answer TextView which is initially gone (invisible) -->

        <TextView
            android:id="@+id/q4"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:text="What if I do not understand an exercise?"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/down4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/expand"
            android:layout_toEndOf="@+id/q4"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/f4"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/q4"
            android:background="@color/white"
            android:layout_marginBottom="20dp"
            android:text="The exercise should be followed through a video after their description is shown. If confusion continues to arise, contact your physical therapist and they will provide more answers on breathing technique"
            android:textColor="#5A5A5A"
            android:textSize="17dp" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/up4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/expand"
            android:layout_toEndOf="@+id/f4"
            android:layout_below="@+id/f4"
            android:layout_marginStart="5dp"
            android:layout_marginTop="-25dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/button15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/faq4_expand"
        android:onClick="sendBack1"
        android:text="Back" />



</RelativeLayout>
