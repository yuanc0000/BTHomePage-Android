<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/staticFAQ"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Asthma"
        android:textColor="#000000"
        android:textSize="30sp" />


    <RelativeLayout
        android:id="@+id/faq1_expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/staticFAQ"
        android:gravity="center_horizontal"
        android:layout_marginLeft="20dp">

        <!-- Parent layout with blue rectangular padding (using direct color value) -->

        <!-- Answer TextView -->

        <LinearLayout
            android:id="@+id/questionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0099FF"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Question TextView -->
            <TextView
                android:id="@+id/q1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/arrow1"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:src="@drawable/expand_white_1"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
            />
        </LinearLayout>

        <TextView
        android:visibility="gone"
        android:id="@+id/f1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/questionLayout"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Asthma is a chronic condition where lung airways are inflamed and become narrowed at times. Its cause varies depending on the person, but is often the result of the immune systemâ€™s response to a substance in the lungs. Depending on the substance, there can be swelling and narrowing of the airways - making it harder to breathe. "
        android:textColor="#5A5A5A"
        android:textSize="17dp" />

</RelativeLayout>


    <RelativeLayout
        android:id="@+id/faq2_expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/faq1_expand"
        android:gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:id="@+id/questionLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0099FF"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Question TextView -->
            <TextView
                android:id="@+id/q2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Symptoms"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/arrow2"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/expand_white_1" />
        </LinearLayout>

        <!-- Answer TextView -->
        <TextView
            android:visibility="gone"
            android:id="@+id/f2"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/questionLayout2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Wheezing, coughing, and chest tightness."
            android:textColor="#5A5A5A"
            android:textSize="17sp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/faq3_expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/faq2_expand"
        android:gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:id="@+id/questionLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0099FF"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Question TextView -->
            <TextView
                android:id="@+id/q3"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Tests"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/arrow3"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/expand_white_1" />
        </LinearLayout>

        <!-- Answer TextView -->
        <TextView
            android:visibility="gone"
            android:id="@+id/f3"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/questionLayout3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Consult a doctor to identify treatment options such as control medications, short-term medications, and breathing exercises."
            android:textColor="#5A5A5A"
            android:textSize="17sp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/faq4_expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/faq3_expand"
        android:gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:id="@+id/questionLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0099FF"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Question TextView -->
            <TextView
                android:id="@+id/q4"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Recommended Exercises"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/arrow4"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/expand_white_1" />

        </LinearLayout>

        <!-- Answer TextView -->
        <TextView
            android:visibility="gone"
            android:id="@+id/f4"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/questionLayout4"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Diaphragmatic Breathing, Pursed Lip Breathing."
            android:textColor="#5A5A5A"
            android:textSize="17sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/button15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/faq4_expand"
        android:layout_gravity="center_horizontal"
        android:onClick="BackToDiagnoses"
        android:text="Finished" />



</RelativeLayout>