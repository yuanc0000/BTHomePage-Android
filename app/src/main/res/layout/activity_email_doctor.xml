<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Data"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/privacy_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your privacy is important to us. We protect your exercise data securely."
        android:layout_below="@id/titleTextView"
        android:padding="16dp"/>

    <Button
        android:id="@+id/send_to_doctor_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send to Doctor"
        android:layout_below="@id/privacy_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

</RelativeLayout>
