        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView36" />

    <Button
        android:id="@+id/decrease4"
        android:layout_width="58dp"
        android:layout_height="42dp"
        android:layout_marginStart="100dp"
