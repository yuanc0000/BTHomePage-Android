        android:id="@+id/decrease5"
        android:layout_width="58dp"
        android:layout_height="42dp"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="50dp"
        android:onClick="decreaseInteger5"
        android:text="-"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView38" />

    <TextView
        android:id="@+id/integer_number1"
        android:layout_width="50dp"
        android:layout_height="27dp"
        android:layout_marginTop="6dp"
        android:text="0"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/increase1"
        app:layout_constraintStart_toEndOf="@+id/decrease1"
        app:layout_constraintTop_toBottomOf="@+id/textView35" />

    <TextView
        android:id="@+id/integer_number3"
        android:layout_width="50dp"
        android:layout_height="27dp"
        android:layout_marginTop="4dp"
