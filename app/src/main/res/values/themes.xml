<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BTHomePage" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#C5DEEA</item>
        <item name="colorPrimaryVariant">#C5DEEA</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#C5DEEA</item>
        <item name="colorSecondaryVariant">#C5DEEA</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BTHomePage.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyTheme.BTHomePage.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="Theme.BTHomePage.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BTHomePage.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NormalDateStyle">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="LoggedInDateStyle">
        <item name="android:textColor">@android:color/holo_blue_dark</item>
    </style>

</resources>